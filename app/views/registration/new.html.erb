<h1>Create new user</h1>

<%= form_for(@user, :url => new_user_registration_path, :html => { :class => "form-horizontal" }) do |f| %>
    <% unless @user.errors.full_messages.empty? %>
        <div class="alert alert-error">
            <button class="close" data-dismiss="alert">Ã—</button>
            <h3>Correct the following errors</h3>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
            <%= f.email_field :email %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :country_id, :class => 'control-label' %>
        <div class="controls">
            <%= f.country_select :country_id %>
        </div>
    </div>

    <div class="controls"><%= f.submit "Send credentials", :class => 'btn btn-primary' %></div>
<% end %>
