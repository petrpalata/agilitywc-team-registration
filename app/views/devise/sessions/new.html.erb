<h2><%= t 'teams.form.sign_in' %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal'} ) do |f| %>
    <div class="control-group">
        <%= f.label :email, t('teams.form.email'), :class => 'control-label' %>
        <div class="controls">
            <%= f.email_field :email %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :password, t('teams.form.password'), :class => 'control-label' %>
        <div class="controls">
            <%= f.password_field :password %>
        </div>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
        <%= f.label :remember_me, t('teams.form.remember_me'), :class => 'control-label' %>
        <div class="controls">
            <%= f.check_box :remember_me %>
        </div>
    </div>
  <% end -%>

  <div class="controls"><%= f.submit t('teams.form.sign_in'), :class => 'btn btn-primary' %></div>
<% end %>
